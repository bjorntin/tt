{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "@/assets/*": [
        "./assets/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "assets",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
